@page "/editemployee/{id:int}"
@inject BlazorApp1.Data.MyService MyService
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager
@using BlazorApp1.Models;

<h3>EditEmployee</h3>
<div class="form-container">
    <form @onsubmit="EditEmployeeData">
        <div class="form-group">
            <label for="empName">Employee Name:</label>
            <input type="text" id="empName" class="form-control" @bind-value="employee.Empname" />
        </div>

        <div class="form-group">
            <label for="empDesignation">Designation:</label>
            <input type="text" id="empDesignation" class="form-control" @bind-value="employee.EmpDesignation" />
        </div>

        <div class="form-group">
            <label for="empSalary">Salary:</label>
            <input type="number" id="empSalary" class="form-control" @bind-value="employee.EmpSalary" />
        </div>

        <div class="form-group">
            <label>Gender:</label>
            <div class="radio-group">
                <input type="radio" id="maleRadio" name="gender" @bind-value="employee.EmpGender" />
                <label for="maleRadio">Male</label>

                <input type="radio" id="femaleRadio" name="gender" @bind-value="employee.EmpGender" />
                <label for="femaleRadio">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="empEmail">Email:</label>
            <input type="text" id="empEmail" class="form-control" @bind-value="employee.EmpEmail" />
        </div>

        <div class="form-group">
            <label for="empAge">Age:</label>
            <input type="number" id="empAge" class="form-control" @bind-value="employee.EmpAge" />
        </div>

       @* <div class="form-group">
            <label for="empSkills">Skills:</label>
            <input type="text" id="empSkills" class="form-control" @bind-value="employee.EmpSkills" />
        </div>*@
        <hr />
        <div class="form-group">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>

